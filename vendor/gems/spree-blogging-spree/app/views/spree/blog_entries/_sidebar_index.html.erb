<div id="blog_entry_sidebar">
  <h6>Blog Categories</h6>
  <%= render :partial => 'spree/blog_entries/categories_list' %>

  <h6>Blog Tag Cloud</h6>
  <%= render :partial => 'spree/blog_entries/tag_cloud' %>
  
  <h6>Recent Blog Entries</h6>
  <%= render :partial => 'spree/blog_entries/recent_blog_entries', :object => Spree::BlogEntry.recent(10) %>

  <h6>Blog Archive</h6>
  <%= render :partial => 'spree/blog_entries/news_archive', :object => Spree::BlogEntry.organize_blog_entries %>
</div>